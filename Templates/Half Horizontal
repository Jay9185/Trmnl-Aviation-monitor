      <div class="flight-card">
        
        <div class="row-top">
          <span class="callsign">{{ flight.callsign }}</span>
          <span class="dist-badge">{{ flight.distance | default: "--" }} nm</span>
        </div>

        <div class="row-mid">
          <span class="airline">{{ flight.airline | default: "UNKNOWN" }}</span>
        </div>

        <div class="row-metrics">
          <div class="metric">
            <span class="icon">↑</span>
            <span class="val">{{ flight.altitude }}</span>
            <span class="unit">ft</span>
          </div>
          <div class="metric">
            <span class="icon">→</span>
            <span class="val">{{ flight.speed }}</span>
            <span class="unit">kts</span>
          </div>
          <div class="metric">
            <span class="icon">◎</span>
            <span class="val">{{ flight.heading }}</span>
            <span class="unit">°</span>
          </div>
        </div>

        <div class="row-footer">
          <span class="direction">{{ flight.cardinal_direction | default: "NE" }}</span>
          <span class="aircraft-full-name">{{ flight.description | default: flight.aircraftType }}</span>
        </div>
        
      </div>
    {% else %}
      <div class="no-data">NO TRAFFIC DETECTED</div>
    {% endfor %}

    {% if flights.size == 1 %}
      <div class="flight-card" style="border-right: none;"></div>
    {% endif %}
  </div>
